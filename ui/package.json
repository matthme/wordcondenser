{
  "name": "ui",
  "version": "0.1.0",
  "scripts": {
    "start": "vite --port $UI_PORT --clearScreen false",
    "build": "vite build",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "package": "npm run build && rm dist.zip && cd dist && bestzip ../dist.zip *"
  },
  "dependencies": {
    "@fontsource/poppins": "4.5.10",
    "@holochain/client": "^0.12.5",
    "@holochain-open-dev/elements": "^0.2.0",
    "@holochain-open-dev/stores": "^0.1.9",
    "@holochain-open-dev/utils": "^0.9.9",
    "@lit-labs/context": "^0.2.0",
    "@lit-labs/task": "^2.0.0",
    "@lit/localize": "^0.11.4",
    "@material/mwc-circular-progress": "^0.27.0",
    "@material/mwc-button": "^0.27.0",
    "@material/mwc-textfield": "^0.27.0",
    "@material/mwc-textarea": "^0.27.0",
    "@material/mwc-checkbox": "^0.27.0",
    "@material/mwc-slider": "^0.27.0",
    "@material/mwc-icon-button": "^0.27.0",
    "@material/mwc-snackbar": "^0.27.0",
    "@material/mwc-formfield": "^0.27.0",
    "@msgpack/msgpack": "^2.7.2",
    "@open-wc/scoped-elements": "^2.1.1",
    "@tauri-apps/api": "^1.5.0",
    "@vaadin/date-time-picker": "^23.2.8",
    "silly-password-generator": "1.0.21",
    "emittery": "^1.0.1",
    "lit": "^2.6.1",
    "lit-svelte-stores": "^0.2.1",
    "lodash-es": "^4.17.21",
    "md5": "^2.3.0",
    "javascript-time-ago": "2.5.9",
    "unique-names-generator": "^4.7.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@types/lodash-es": "^4.17.5",
    "@types/md5": "^2.3.2",
    "@types/uuid": "9.0.0",
    "bestzip": "^2.2.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "rimraf": "^3.0.2",
    "vite": "^4.0.0",
    "vite-plugin-checker": "^0.5.3",
    "typescript": "^4.5.5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "wc/guard-super-call": "off",
      "prefer-destructuring": "off",
      "no-useless-constructor": "off",
      "no-empty-function": "off",
      "no-empty-pattern": "off",
      "camelcase": "off",
      "import/no-duplicates": "off",
      "no-unused-vars": "off",
      "class-methods-use-this": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "no-use-before-define": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "type": "module"
}
